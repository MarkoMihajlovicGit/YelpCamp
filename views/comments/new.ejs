<% include ../partials/header %>

  <div class="row">
    <div class = "col-6 mx-auto">
      <div class="row">
       <h1 class="text-center col-7  mx-auto mt-3">Add New Comment to <%=campground.name%></h1>
      </div>
    <form class ="p-2"action = "/campgrounds/<%=campground._id%>/comments" method = "POST">
      <div class= "form-group">
        <label for ="text">Comment:</label>
        <input class= "form-control  mx-auto mt-3" type = "text" name = "comment[text]" placeholder = "text">
      </div>
        <div class="form-group mt-2 mb-2 pb-1">
            <fieldset class="starability-basic form-group m-auto" id="rating">
                          <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
               <% var words = ["Terrible","Not good","Average","Very good","Amazing"]; %>
               <% for (var i = 1; i < 6; i++) { %>
                        <input type="radio" id="first-rate<%= i %>"name="comment[rating]" value="<%= i %>">
                        <label for="first-rate<%= i %>" title="<%=words[i-1]%>"><%= i %> star</label>
                <% } %> 
            </fieldset>
        </div>
        
       <div class="row">
         <button class="btn  btn-primary col-9  mx-auto">Submit!</button>
       </div>
    </form>
    <div class="row">
         <a class="btn  btn-secondary col-7  mx-auto mt-3" href= "/campgrounds/<%= campground._id%>">Go back</a>
    </div>
    </div>
     
  </div>
   
    <!--<a href = "/campgrounds">Go back</a>  -->



<% include ../partials/footer %>