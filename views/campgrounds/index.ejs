<%  include ../partials/header %>
  
 
    <header class = "jumbotron pb-2 mb-2 mt-2">
        <h1>Welcome to Yelp Camp!!!</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <p>
          <a class="btn btn-primary btn-md" href= "/campgrounds/new">Add New Campground</a>  
        </p>
        <form class="form-inline" action="/campgrounds" method="GET"> 
                <div class="form-group form-group-xs">
                    <input class="form-control mr-2 input-sm mb-2" type="text" name="search" placeholder="Campground search...">
                    <input id="searchBtn"class="btn btn-default btn-md mb-2" type="submit" value="Search">
                </div>
        </form>
    </header>
    
    <div class = "row">
        <div class = "col-lg-12">
            <h3>Our Most Popular Campgrounds!</h3>
        </div>
    <div class = "card-deck text-center">
       
      <% campgrounds.forEach(function(campground){ %>
      <div class = "col-md-4 col-sm-6 mt-3" > 
        <div class = "card h-100">
           <img  style="max-height:15rem;"class="card-img-top img-fluid"src = "<%= campground.image%>"> 
           <div class = "card-body">
             <h4 class = "card-title">
              <%= campground.name%>
             </h4>  
             <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">More Info</a>
           </div>
           
        </div>
            
        
     </div>  
      <% }); %> 
        
    </div>
            
    </div>
           
        


<%  include ../partials/footer %>





