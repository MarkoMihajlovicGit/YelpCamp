<!DOCTYPE html>
<html>
  <head>
  	  <title>Yelp Camp</title>
  	  <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  	  <link rel="stylesheet" href="/stylesheets/main.css">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">Yelp Camp</a>
      <a class="navbar-brand" href="/campgrounds">Campgrounds</a>
       <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#burger" aria-controls="burger" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
       </button>
      <div class="collapse navbar-collapse " id="burger">
        <div class="navbar-nav ml-auto">
          <%if(!currentUser){ %>
             <a class="nav-item nav-link active" href="/login">Login<span class="sr-only">(current)</span></a>
             <a class="nav-item nav-link" href="/register">Sign Up</a>
         <% }else{ %>
             <a class="nav-item nav-link" href="#">Signed In As : <strong><%= currentUser.username %></strong></a>
             <a class="nav-item nav-link" href="/logout">Logout</a>
         <% } %>
        </div>
      </div>
    </nav>
    
    

<div class="container">
    <% if(error && error.length > 0){ %>
    <div class="alert alert-danger mt-4" role="alert">
      <%= error%>
    </div>
    <% } %>
    <% if(success && success.length > 0){ %>
    <div class="alert alert-success mt-4" role="alert">
      <%= success %>
    </div>
    <% } %>
    
    
   